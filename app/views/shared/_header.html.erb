<%# CSS・・・assets/stylesheets/shared/header.css %>
<header class='top-page-header'>
  <div class='search-bar-contents'>
    <%= link_to image_tag("furima-logo-color.png", class:"furima-icon"), "/" %>
    <%= search_form_for @search, url: search_items_path, class: "search-form" do |f| %>
      <%= f.search_field :name_or_description_cont, class: "input-box", placeholder: "キーワードから探す" %>
      <%= f.button type: "sumbit", class: "search-button" do %>
        <span class="fas fa-search search-icon"></span>
      <% end %>
    <% end %> 
  </div>
  <div class='nav'>
    <ul class='lists-left'>
      <li><%= link_to 'カテゴリー', "#", class: "category-list" %></li>
      <li><%= link_to 'ブランド', "#", class: "brand-list" %></li>
    </ul>
    <ul class='lists-right'>
      <% if user_signed_in? %>
        <li><%= link_to current_user.nickname, "#", class: "user-nickname" %></li>
        <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout" %></li>
      <% else %>
        <li><%= link_to 'ログイン', new_user_session_path, class: "login" %></li>
        <li><%= link_to '新規登録', new_user_registration_path, class: "sign-up" %></li>
      <% end %>
    </ul>
  </div>
  <div class="menu-trigger">
    <span></span>
    <span></span>
    <span></span>
  </div>
  <div class="sp-nav">
    <%= search_form_for @search, url: search_items_path, class: "sp-search-form" do |f| %>
      <%= f.search_field :name_or_description_cont, class: "sp-input-box", placeholder: "キーワードから探す" %>
      <%= f.button type: "sumbit", class: "sp-search-button" do %>
        <span class="fas fa-search sp-search-icon"></span>
      <% end %>
    <% end %>
    <div class="sp-nav-item">カテゴリ<span class="fas fa-caret-right sp-arrow"></span></div>
    <ul class="sp-nav-parent">
      <% @categories.each do |category| %>
        <li class="sp-nav-child"><%= link_to category.name, "#" %></li>
      <% end %>
    </ul>
    <div class="sp-nav-item">ブランド<span class="fas fa-caret-right sp-arrow"></span></div>
    <ul class="sp-nav-parent">
      <li class="sp-nav-child"><a href="#">brand</a></li>
      <li class="sp-nav-child"><a href="#">その他</a></li>
    </ul>
    <% if user_signed_in? %>
      <div class="sp-nav-item sp-link"><%= link_to "ユーザーページ", "#" %></div>
      <div class="sp-nav-item sp-link"><%= link_to 'ログアウト', destroy_user_session_path, method: :delete %></div>
    <% else %>
      <div class="sp-nav-item sp-link"><%= link_to 'ログイン', new_user_session_path %></div>
      <div class="sp-nav-item sp-link"><%= link_to '新規登録', new_user_registration_path %></div>
    <% end %>
  </div>
  <div class="overlay"></div>
</header>